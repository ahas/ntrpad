{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "ntrpad",
  "version": "0.1.0",
  "identifier": "io.ahas.ntrpad",
  "build": {
    "beforeDevCommand": "NUXT_PORT=1420 bunx nuxt dev",
    "beforeBuildCommand": "bun run nuxt:generate",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../src-nuxt/dist"
  },
  "app": {
    "windows": [
      {
        "title": "NTR Pad",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": [
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}